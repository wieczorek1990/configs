[alias]
  a = add
  aa = add --all
  amend = commit --amend
  authors = !git log --all --format='%cN <%cE>' | sort -u
  b = branch
  ba = branch -a
  bd = branch -d
  bdf = branch -D
  bm = branch -m
  bn = checkout -b
  br = branch -r
  c = commit
  ca = commit -a -m
  cd = cherry -v develop
  cl = clone
  cln = !git clean -dfnx && echo 'Are you sure?' && read _ && git clean -dfx
  clr = checkout @ -- .
  cm = commit -m
  co = checkout
  contains = branch --contains
  cp = cherry-pick
  d = diff
  da = diff @
  dc = diff --cached
  discard = !git reset @ -- . && git checkout @ -- .
  ds = diff stash@{0}
  dt = difftool
  f = fetch --all --prune
  fa = fame --by-type --branch=develop
  hash = rev-parse --short @
  i = update-index --assume-unchanged
  l = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
  less = !less -R
  lm = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr)' --abbrev-commit --author='≈Åukasz Wieczorek' --date=relative
  ls = log --graph --oneline --decorate
  m = merge --no-ff
  merged = branch --merged
  msg = log -n 1 --pretty=format:%s
  mt = mergetool
  notmerged = branch --no-merged
  p = push origin
  patch = show -p
  pf = push --force-with-lease
  pr = !git checkout develop && git pull origin develop && git checkout - && git rebase develop --committer-date-is-author-date --preserve-merges && git push --force-with-lease
  pt = push -u origin
  pu = pull origin
  puc = "!f(){ HEAD=`git rev-parse --abbrev-ref @`; git pull origin \"${HEAD}\"; }; f"
  pul = pull .
  pur = pull --rebase origin
  r = rebase
  ra = rebase --abort
  rc = rebase --continue
  rst = reset @ -- .
  rstf = "!f() { HEAD=`git rev-parse --abbrev-ref @`; git reset --hard \"origin/${HEAD}\"; }; f"
  restore = checkout @ --
  rf = !rm -rf
  ri = rebase --interactive --committer-date-is-author-date --preserve-merges
  s = status
  st = stash
  sta = stash apply --index
  stats = diff --stat
  std = stash drop
  stl = stash list
  stp = stash pop --index
  sts = stash save
  stsh = show stash@{0}
  stua = !git stash show -p | git apply -R
  ui = update-index --no-assume-unchanged
  undo = reset --soft @~1
  untracked = clean -fx
  up = !git add --all && git commit --amend --no-edit && git push --force
  upstream = branch --set-upstream-to origin
  x = update-index --chmod=+x
[core]
  autocrlf = false
  eol = lf
  fileMode = false
[diff]
  tool = meld
[difftool]
  prompt = false
[include]
  path = ~/.gituser
  path = ~/.gitlocal
[merge]
  conflictstyle = diff3
  tool = mymeld
[mergetool]
  keepBackup = false
[mergetool "mymeld"]
  cmd = meld $LOCAL $BASE $REMOTE --output $MERGED
[push]
  default = current

